Notes 
- This XML uses config keys so values are injected at runtime from the TDK harness or a config file.
        Example INI (put in the harness config area or pass keys via your runner):

                [package_manager]
                PACKAGE_ID = com.example.package
                PACKAGE_VERSION = 1.0.0
                PACKAGE_URL = http://example.com/package.pkg
                PACKAGE_ADDITIONAL_METADATA = {}
                LOCK_REASON = Launch
                CONFIG_KEY = exampleKey
                CONFIG_VALUE = exampleValue

- The XML uses useConfigFile="true" and key="..." to instruct the harness to substitute these values.
- For dynamic flows, capture plugin returns with saveResult and reuse them via useMethodTag.
        
-->
<TestPlugin pluginName="PackageManagerRDKEMS" pluginVersion="1">

    <!-- INSTALL PACKAGE (values sourced from harness config) -->
    <testStep stepId="1" name="Install" method="org.rdk.PackageManagerRDKEMS.install" saveResult="true">
        <param tag="packageId" useConfigFile="true" key="PACKAGE_ID" />
        <param tag="version" useConfigFile="true" key="PACKAGE_VERSION" />
        <param tag="fileLocator" useConfigFile="true" key="PACKAGE_URL" />
        <param tag="additionalMetadata" useConfigFile="true" key="PACKAGE_ADDITIONAL_METADATA" />
        <resultGeneration useMethodTag="install_result" />
    </testStep>

    <!-- LIST PACKAGES -->
    <testStep stepId="2" name="List_Packages" method="org.rdk.PackageManagerRDKEMS.listPackages" saveResult="true">
        <resultGeneration useMethodTag="listpackages_result" />
    </testStep>

    <!-- CONFIG PACKAGE MANAGER -->
    <testStep stepId="3" name="Config" method="org.rdk.PackageManagerRDKEMS.config">
        <param tag="key" useConfigFile="true" key="CONFIG_KEY" />
        <param tag="value" useConfigFile="true" key="CONFIG_VALUE" />
    </testStep>

    <!-- PACKAGE STATE: include version -->
    <testStep stepId="4" name="Package_State" method="org.rdk.PackageManagerRDKEMS.packageState">
        <param tag="packageId" useConfigFile="true" key="PACKAGE_ID" />
        <param tag="version" useConfigFile="true" key="PACKAGE_VERSION" />
    </testStep>

    <!-- LOCK PACKAGE -->
    <testStep stepId="5" name="Lock" method="org.rdk.PackageManagerRDKEMS.lock">
        <param tag="packageId" useConfigFile="true" key="PACKAGE_ID" />
        <param tag="version" useConfigFile="true" key="PACKAGE_VERSION" />
        <param tag="lockReason" useConfigFile="true" key="LOCK_REASON" />
    </testStep>

    <!-- UNLOCK PACKAGE -->
    <testStep stepId="6" name="Unlock" method="org.rdk.PackageManagerRDKEMS.unlock">
        <param tag="packageId" useConfigFile="true" key="PACKAGE_ID" />
        <param tag="version" useConfigFile="true" key="PACKAGE_VERSION" />
    </testStep>

    <!-- GET LOCKED INFO -->
    <testStep stepId="7" name="Get_Locked_Info" method="org.rdk.PackageManagerRDKEMS.getLockedInfo">
        <param tag="packageId" useConfigFile="true" key="PACKAGE_ID" />
        <param tag="version" useConfigFile="true" key="PACKAGE_VERSION" />
        <resultGeneration useMethodTag="get_locked_info" />
    </testStep>

     <!-- UNINSTALL PACKAGE -->
    <testStep stepId="8" name="Uninstall" method="org.rdk.PackageManagerRDKEMS.uninstall" saveResult="true">
        <param tag="packageId" useConfigFile="true" key="PACKAGE_ID" />
        <param tag="version" useConfigFile="true" key="PACKAGE_VERSION" />
        <resultGeneration useMethodTag="uninstall_result" />
    </testStep>

    <!-- EVENT: onAppInstallationStatus -> listen for install/uninstall outcomes -->
    <testStep stepId="9" name="On_App_Installation_Status" event="onAppInstallationStatus" action="eventListener" delay="15">
        <resultGeneration useMethodTag="onAppInstallationStatus_event" />
    </testStep>

</TestPlugin>