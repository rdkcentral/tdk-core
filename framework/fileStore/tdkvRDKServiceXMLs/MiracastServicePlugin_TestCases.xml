<testPlugin pluginName="MiracastService" pluginVersion="1">
	<pluginPreRequisite>
      	<!-- Activate MiracastService plugin -->
      	<prerequisite requisiteId="1" requisiteName="Activate_MiracastService_Plugin">
        	<testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
            		<params>
              			<param tag="plugin" value="org.rdk.MiracastService" indexOnly="true" />
            		</params>
            		<resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastService" />
        	</testStep>
        	<testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
            	<conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.MiracastService" />
            		<params>
              			<param tag="callsign" value="org.rdk.MiracastService" />
            		</params>
        	</testStep>
        	<testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
            	<conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.MiracastService" />
            		<params>
              			<param tag="plugin" value="org.rdk.MiracastService" indexOnly="true" />
            		</params>
            		<resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastService" expectedValues="activated"/>
        	</testStep>
	</prerequisite>

	<!-- Activate MiracastPlayer plugin -->
        <prerequisite requisiteId="2" requisiteName="Activate_MiracastPlayer_Plugin">
                <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                        <params>
                                <param tag="plugin" value="org.rdk.MiracastPlayer" indexOnly="true" />
                        </params>
                        <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastPlayer" />
                </testStep>
                <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.MiracastPlayer" />
                        <params>
                                <param tag="callsign" value="org.rdk.MiracastPlayer" />
                        </params>
                </testStep>
                <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.MiracastPlayer" />
                        <params>
                                <param tag="plugin" value="org.rdk.MiracastPlayer" indexOnly="true" />
                        </params>
                        <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastPlayer" expectedValues="activated"/>
                </testStep>
        </prerequisite>

	<!-- Event Registration -->
        <prerequisite requisiteId="3" requisiteName="Register_And_Listen_Events" type="eventRegister" trace="false">
              <event pluginName="Controller" eventName="Event_Controller_State_Changed" />
        </prerequisite>
	</pluginPreRequisite>

	<!-- Test case 01 -->
    	<testCase testCaseId="Miracast_01" testCaseName="MiracastService_Get_Enable"  desc="Check if the getEnable method correctly returns the valid enable status of the miracast feature">
        	<testCaseInfo testCaseType="direct"/>
        	<testStep testStepId="1" name="Get_Enable" method="MiracastService_getEnable">
                	<resultGeneration useMethodTag="get_enabled_status_validation"/>
        	</testStep>
    	</testCase>	

	<!-- Test case 02 -->
    	<testCase testCaseId="Miracast_02" testCaseName="MiracastService_Set_Get_Enable"  desc="Check if the miracast feature can be enabled or disabled using the setEnable API">
        	<testCaseInfo testCaseType="setandget" revert="true"/>
        	<testStep testStepId="1" name="Get_Enable" method="MiracastService_getEnable" saveResult="true" revertGet="yes">
                	<resultGeneration useMethodTag="get_enabled_status_validation"/>
		</testStep>
		<testStep testStepId="2" name="Set_Enable" method="MiracastService_setEnable" revertSet="yes">
                	<params>
                        	<param tag="enabled" usePreviousResult="true" Id="1" useMethodTag="miracast_toggle_enabled_status" revertParam="yes"/>
                	</params>
                	<resultGeneration useMethodTag="success_status_validation"/>
        	</testStep>
        	<testStep testStepId="3" name="Get_Enable" method="MiracastService_getEnable" revertFlag="yes">
                	<resultGeneration useMethodTag="get_enabled_status_validation">
                        	<expectedValues usePreviousResult="true" Id="1" useMethodTag="miracast_toggle_enabled_status" />
                	</resultGeneration>
        	</testStep>
    	</testCase>

	<!-- Test case 03 -->
    	<testCase testCaseId="Miracast_03" testCaseName="MiracastService_Set_Enable_Without_Parameter"  desc="Check if the setEnable method returns an error when parameter is not provided">
        	<testCaseInfo testCaseType="direct"/>
        	<testStep testStepId="1" name="Set_Enable_Without_Parameter" method="MiracastService_setEnable">
                	<resultGeneration useMethodTag="success_negative_status_validation"/>
        	</testStep>
    	</testCase>

	<!-- Test case 04 -->
        <testCase testCaseId="Miracast_04" testCaseName="MiracastService_Accept_Client_Connection"  desc="Check if the method acceptClientConnection successfully accepts a new client connection request">
                <testCaseInfo testCaseType="direct"/>
		<testCasePreRequisite>
        	<prerequisite requisiteId="1" requisiteName="Enable_Miracast_Feature">
        	<testStep testStepId="1" name="Get_Enable" method="MiracastService_getEnable" saveResult="true">
               	 	<resultGeneration useMethodTag="get_enabled_status_validation"/>
        	</testStep>
        	<testStep testStepId="2" name="Set_Enable" method="MiracastService_setEnable">
                	<conditionalExecution enable="true" Id="1" useMethodTag="miracast_getpreviousenable"/>
                	<params>
                        	<param tag="enabled" value="true"/>
                	</params>
                	<resultGeneration useMethodTag="success_status_validation"/>
        	</testStep>
        	<testStep testStepId="3" name="Get_Enable" method="MiracastService_getEnable">
                	<conditionalExecution enable="true" Id="1" useMethodTag="miracast_getpreviousenable"/>
                	<resultGeneration useMethodTag="get_enabled_status_validation">
                        	<expectedValues value="true" />
                	</resultGeneration>
        	</testStep>
        	</prerequisite>
        	</testCasePreRequisite>	
		
		<testStep testStepId="1" name="Accept_Client_Connection" method="MiracastService_acceptClientConnection">
			<params>
                                <param tag="requestStatus" value="Accept"/>
                        </params>
                        <resultGeneration useMethodTag="success_status_validation"/>
                </testStep>
        </testCase>

	<!-- Test case 05 -->
        <testCase testCaseId="Miracast_05" testCaseName="MiracastService_Reject_Client_Connection"  desc="Check if the method acceptClientConnection successfully reject a new client connection request">
                <testCaseInfo testCaseType="direct"/>
		<testCasePreRequisite>
                <prerequisite requisiteId="1" requisiteName="Enable_Miracast_Feature">
                <testStep testStepId="1" name="Get_Enable" method="MiracastService_getEnable" saveResult="true">
                        <resultGeneration useMethodTag="get_enabled_status_validation"/>
                </testStep>
                <testStep testStepId="2" name="Set_Enable" method="MiracastService_setEnable">
                        <conditionalExecution enable="true" Id="1" useMethodTag="miracast_getpreviousenable"/>
                        <params>
                                <param tag="enabled" value="true"/>
                        </params>
                        <resultGeneration useMethodTag="success_status_validation"/>
                </testStep>
                <testStep testStepId="3" name="Get_Enable" method="MiracastService_getEnable">
                        <conditionalExecution enable="true" Id="1" useMethodTag="miracast_getpreviousenable"/>
                        <resultGeneration useMethodTag="get_enabled_status_validation">
                                <expectedValues value="true" />
                        </resultGeneration>
                </testStep>
                </prerequisite>
                </testCasePreRequisite>
		
		<testStep testStepId="1" name="Reject_Client_Connection" method="MiracastService_acceptClientConnection">
                        <params>
                                <param tag="requestStatus" value="Reject"/>
                        </params>
                        <resultGeneration useMethodTag="success_status_validation"/>
                </testStep>
        </testCase>

