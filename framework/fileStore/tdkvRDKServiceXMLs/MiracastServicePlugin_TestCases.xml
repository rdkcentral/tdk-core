	<!-- Test case 07 -->
	<testCase testCaseId="Miracast_07" testCaseName="MiracastService_ActivateDeactivate_Event_Test" desc="Validates statechange event on Activating/deactivating the plugin">
		<testCaseInfo testCaseType="direct" />
		<testCasePreRequisite>
		<prerequisite requisiteId="1" requisiteName="Activate_Plugin">
		<testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
			<params>
                       		<param tag="plugin" value="org.rdk.MiracastService" indexOnly="true" />
                     	</params>
                   	<resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastService" />
		</testStep>
            	<testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                	<conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.MiracastService" />
                     	<params>
                       		<param tag="callsign" value="org.rdk.MiracastService" />
                     	</params>
            	</testStep>
               	<testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                	<conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.MiracastService" />
                     	<params>
                       		<param tag="plugin" value="org.rdk.MiracastService" indexOnly="true" />
                     	</params>
                     	<resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastService" expectedValues="activated"/>
             	</testStep>
             	</prerequisite>
         	</testCasePreRequisite>
		
		<testStep testStepId="1" name="Deactivate_MiracastService_Plugin" method="Deactivate_Plugin"  pluginName="Controller">
                  	<params>
                    		<param tag="callsign"  value="org.rdk.MiracastService" />
                  	</params>
            	</testStep>
            	<testStep testStepId="2" name="Check_State_Change_Event" event="Event_Controller_State_Changed" action="eventListener" delay="2" pluginName="Controller">
              		<resultGeneration useMethodTag="controller_check_state_change_event" expectedValues="org.rdk.miracastservice,deactivated,requested"/>
            	</testStep>
            	<testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
              		<params>
                     		<param tag="plugin" value="org.rdk.MiracastService" indexOnly="true" />
                 	</params>
                 	<resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastService" expectedValues="deactivated"/>
            	</testStep>
            	<testStep testStepId="4" name="Activate_MiracastService_Plugin" method="Activate_Plugin"  pluginName="Controller" delay="1">
              		<params>
                    		<param tag="callsign" value="org.rdk.MiracastService" />
                  	</params>
            	</testStep>
            	<testStep testStepId="5" name="Check_State_Change_Event" event="Event_Controller_State_Changed" action="eventListener" delay="2" pluginName="Controller">
              		<resultGeneration useMethodTag="controller_check_state_change_event" expectedValues="org.rdk.miracastservice,activated,requested"/>
            	</testStep>
            	<testStep testStepId="6" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller" PluginOnStep="yes" >
                	 <params>
                    	 	<param tag="plugin" value="org.rdk.MiracastService" indexOnly="true" />
                 	</params>
                 	<resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.MiracastService" expectedValues="activated"/>
            	</testStep>
        </testCase>
</testPlugin>
