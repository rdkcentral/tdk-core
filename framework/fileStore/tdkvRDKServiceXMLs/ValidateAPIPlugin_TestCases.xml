<testPlugin pluginName="ValidatePluginAPI" pluginVersion="1">
    <testCase testCaseId="VPA_01" testCaseName="GetHttpExitCodeStatus"  desc="Get the Api exit code status and Validate">
      <testCaseInfo testCaseType="loop" />
      <testStep testStepId="1" name="Check_Api_Plugin_Exit_Code_Status" testStepType="loop">
        <subtestStep subtestStepId="1" name="Validate_Api_Plugin_Exit_Code_Status" method="Get_Http_exit_code_status" action="PluginAPIValidation">
          <params>
            <param tag="httpstatuscode"  iteration="true" useConfigFile="true" key="Plugin_API_EXIT_CODE_STATUS"  indexOnly="true" />
          </params>
          <resultGeneration useMethodTag="validate_http_exit_code">
            <arguments value="check_status" useIterableArg="true"/>
          </resultGeneration>
        </subtestStep>
      </testStep>
    </testCase>
</testPlugin>

