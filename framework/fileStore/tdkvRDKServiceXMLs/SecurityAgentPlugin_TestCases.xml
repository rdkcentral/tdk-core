<testPlugin pluginName="SecurityAgent" pluginVersion="1">
        <pluginPreRequisite>
          <prerequisite requisiteId="1" requisiteName="Activate_Plugins">
            <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                <params>
                  <param tag="plugin" value="SecurityAgent" indexOnly="true" />
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,SecurityAgent" />
            </testStep>
            <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,SecurityAgent" />
                <params>
                  <param tag="callsign" value="SecurityAgent" />
                </params>
            </testStep>
            <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,SecurityAgent" />
                <params>
                  <param tag="plugin" value="SecurityAgent" indexOnly="true" />
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,SecurityAgent" expectedValues="activated"/>
            </testStep>
          </prerequisite>
        </pluginPreRequisite>

        <testCase testCaseId="SA_01" testCaseName="SecurityAgent_Check_Valid_Token"  desc="Passes the valid token and checks the status">
            <testCaseInfo testCaseType="direct" />
            <testStep testStepId="1" name="Get_Security_Token" action="externalFnCall" saveResult="true">
                 <resultGeneration useMethodTag="securityagent_get_security_token"/>
            </testStep>
            <testStep testStepId="2" name="Check_Security_Token" method="SecurityAgent_Validate">
                 <params>
                  <param tag="token" usePreviousResult="true" Id="1" useMethodTag="securityagent_get_token"/>
                </params>
              <resultGeneration useMethodTag="securityagent_validate_token" expectedValues="true" />
            </testStep>
        </testCase>
        <testCase testCaseId="SA_02" testCaseName="SecurityAgent_Check_Invalid_Token"  desc="Passes the invalid token and checks the status">
            <testCaseInfo testCaseType="direct" />
            <testStep testStepId="1" name="Get_Invalid_Security_Token" action="externalFnCall" saveResult="true">
                 <resultGeneration useMethodTag="securityagent_get_invalid_security_token"/>
            </testStep>
            <testStep testStepId="2" name="Check_Invalid_Token" method="SecurityAgent_Validate">
               <params>
                  <param tag="token" usePreviousResult="true" Id="1" useMethodTag="securityagent_get_token" />
                </params>
              <resultGeneration useMethodTag="securityagent_validate_token" expectedValues="false"/>
            </testStep>
        </testCase>
        <testCase testCaseId="SA_03" testCaseName="SecurityAgent_Check_Empty_Token"  desc="Passes the empty token and checks the status">
            <testCaseInfo testCaseType="direct" />
	    <testStep testStepId="1" name="Check_Empty_Token" method="SecurityAgent_Validate">
               <params>
                  <param tag="token" value="" />
               </params>		    
              <resultGeneration useMethodTag="securityagent_validate_token" expectedValues="false" />
            </testStep>
        </testCase>
        <testCase testCaseId="SA_04" testCaseName="SecurityAgent_Check_Modified_Token"  desc="Passes the modified token and checks the status">
            <testCaseInfo testCaseType="direct" />
            <testStep testStepId="1" name="Get_Security_Token" action="externalFnCall" saveResult="true">
                 <resultGeneration useMethodTag="securityagent_get_security_token" arguments="get_modified_token"/>
            </testStep>
            <testStep testStepId="2" name="Check_Security_Token" method="SecurityAgent_Validate">
                 <params>
                  <param tag="token" usePreviousResult="true" Id="1" useMethodTag="securityagent_get_token" />
                </params>
              <resultGeneration useMethodTag="securityagent_validate_token" expectedValues="false" />
            </testStep>
        </testCase>
</testPlugin>
