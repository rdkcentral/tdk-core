<testPlugin pluginName="UserPreferences" pluginVersion="1">
        <pluginPreRequisite>
          <prerequisite requisiteId="1" requisiteName="Activate_Plugins">
            <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                <params>
                  <param tag="plugin" value="org.rdk.UserPreferences" indexOnly="true" />
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserPreferences" />
            </testStep>
            <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.UserPreferences" />
                <params>
                  <param tag="callsign" value="org.rdk.UserPreferences" />
                </params>
            </testStep>
            <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.UserPreferences" />
                <params>
                  <param tag="plugin" value="org.rdk.UserPreferences" indexOnly="true" />
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserPreferences" expectedValues="activated"/>
            </testStep>
          </prerequisite>
	  
	  <prerequisite requisiteId="2" requisiteName="Register_And_Listen_Events" type="eventRegister" trace="false">
	    	  <event pluginName="Controller" eventName="Event_Controller_State_Changed"/>
		  <event pluginName="Controller" eventName="Event_Controller_All" />
          </prerequisite>
  	</pluginPreRequisite>
        
        <testCase testCaseId="UP_01" testCaseName="UserPreferences_SetAndGet_UI_Language" desc="Set and get user preferred UI language" >
           <testCaseInfo testCaseType="direct" />
            <testStep testStepId="1" name="Set_UI_Language" method="Set_UI_Language" >
                <params>
                  <param tag="ui_language" value="US_en" />
                </params>
                <resultGeneration useMethodTag="userpreferences_check_set_operation" />
            </testStep>
            <testStep testStepId="2" name="Get_UI_Language" method="Get_UI_Language" >
                <resultGeneration useMethodTag="userpreferences_get_ui_language" arguments="check_language" expectedValues="US_en" />
            </testStep>
        </testCase>

	<testCase testCaseId="UP_02" testCaseName="UserPreferences_ActivateDeactivate_Event_Test" desc="Validates statechange event on Activating/deactivating the plugin">
            <testCaseInfo testCaseType="direct" />
            <testCasePreRequisite>
                 <prerequisite requisiteId="1" requisiteName="Activate_Plugins">
                   <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                     <params>
                       <param tag="plugin" value="org.rdk.UserPreferences" indexOnly="true" />
                     </params>
                     <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserPreferences" />
                   </testStep>
                   <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                     <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.UserPreferences" />
                     <params>
                       <param tag="callsign" value="org.rdk.UserPreferences" />
                     </params>
                   </testStep>
                   <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                     <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.UserPreferences" />
                     <params>
                       <param tag="plugin" value="org.rdk.UserPreferences" indexOnly="true" />
                     </params>
                     <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserPreferences" expectedValues="activated"/>
                   </testStep>
                </prerequisite>
            </testCasePreRequisite>
            <testStep testStepId="1" name="Deactivate_UserPreferences_Plugin" method="Deactivate_Plugin"  pluginName="Controller">
                  <params>
                    <param tag="callsign"  value="org.rdk.UserPreferences" />
                  </params>
            </testStep>
            <testStep testStepId="2" name="Check_State_Change_Event" event="Event_Controller_State_Changed" action="eventListener" delay="2" pluginName="Controller">
              <resultGeneration useMethodTag="controller_check_state_change_event" expectedValues="org.rdk.userpreferences,deactivated,requested"/>
            </testStep>
            <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                 <params>
                     <param tag="plugin" value="org.rdk.UserPreferences" indexOnly="true" />
                 </params>
                 <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserPreferences" expectedValues="deactivated"/>
            </testStep>
            <testStep testStepId="4" name="Activate_org.rdk.UserPreferences_Plugin" method="Activate_Plugin"  pluginName="Controller" delay="1">
                  <params>
                    <param tag="callsign" value="org.rdk.UserPreferences" />
                  </params>
            </testStep>
            <testStep testStepId="5" name="Check_State_Change_Event" event="Event_Controller_State_Changed" action="eventListener" delay="2" pluginName="Controller">
              <resultGeneration useMethodTag="controller_check_state_change_event" expectedValues="org.rdk.userpreferences,activated,requested"/>
            </testStep>
            <testStep testStepId="6" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller" PluginOnStep="yes" >
                 <params>
                     <param tag="plugin" value="org.rdk.UserPreferences" indexOnly="true" />
                 </params>
                 <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserPreferences" expectedValues="activated"/>
            </testStep>
        </testCase>

