<testPlugin pluginName="UserSettings" pluginVersion="1">
	<pluginPreRequisite>
	  <!-- PluginPreRequisite 1 -->
          <prerequisite requisiteId="1" requisiteName="Activate_Plugin">
            <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                <params>
                  <param tag="plugin" value="org.rdk.UserSettings" indexOnly="true"/>
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserSettings"/>
            </testStep>
            <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller">
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.UserSettings"/>
                <params>
                  <param tag="callsign" value="org.rdk.UserSettings"/>
                </params>
            </testStep>
            <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller">
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.UserSettings"/>
                <params>
                  <param tag="plugin" value="org.rdk.UserSettings" indexOnly="true"/>
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.UserSettings" expectedValues="activated"/>
            </testStep>
    	  </prerequisite>

	  <!-- Event Registration -->
