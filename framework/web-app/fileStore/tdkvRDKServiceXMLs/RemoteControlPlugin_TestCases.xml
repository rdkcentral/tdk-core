<testPlugin pluginName="RemoteControl" pluginVersion="1">
    <pluginPreRequisite>
      <!-- Activate RemoteControl plugin -->
      <prerequisite requisiteId="1" requisiteName="Activate_Plugin">
        <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
            <params>
              <param tag="plugin" value="org.rdk.RemoteControl" indexOnly="true" />
            </params>
            <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.RemoteControl" />
        </testStep>
        <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
            <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.RemoteControl" />
            <params>
              <param tag="callsign" value="org.rdk.RemoteControl" />
            </params>
        </testStep>
        <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
            <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.RemoteControl" />
            <params>
              <param tag="plugin" value="org.rdk.RemoteControl" indexOnly="true" />
            </params>
            <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.RemoteControl" expectedValues="activated"/>
        </testStep>
      </prerequisite>

      <!-- Check control manager service status -->
      <prerequisite requisiteId="2" requisiteName="Check_ControlManager_Service_Status">
            <testStep testStepId="1" name="Check_ControlManager_Service_Status"  action="externalFnCall">
                <resultGeneration useMethodTag="check_service_status" arguments="ctrlm-main"/>
            </testStep>
      </prerequisite>

      <!-- Activate Bluetooth Plugin -->
      <prerequisite requisiteId="3" requisiteName="Activate_Bluetooth_Plugin">
            <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                <params>
                  <param tag="plugin" value="org.rdk.Bluetooth" indexOnly="true" />
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.Bluetooth" />
            </testStep>
            <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.Bluetooth" />
                <params>
                  <param tag="callsign" value="org.rdk.Bluetooth" />
                </params>
            </testStep>
            <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.Bluetooth" />
                <params>
                  <param tag="plugin" value="org.rdk.Bluetooth" indexOnly="true" />
                </params>
                <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.Bluetooth" expectedValues="activated"/>
            </testStep>
      </prerequisite>

      <!-- Get_Connected_Remote_Device -->
      <prerequisite requisiteId="4" requisiteName="Get_Connected_Remote_Device">
      	    <testStep testStepId="1" name="Get_Connected_Remote_Device" method="Get_Connected_Devices" delay="5" pluginName="Bluetooth">
