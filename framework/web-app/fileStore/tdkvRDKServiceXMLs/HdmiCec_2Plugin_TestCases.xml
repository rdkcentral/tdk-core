<testPlugin pluginName="HdmiCec_2" pluginVersion="1">
    <pluginPreRequisite>
      <!-- Activate HDMICEC_2 plugin -->
      <prerequisite requisiteId="1" requisiteName="Activate_Plugins">
        <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
            <params>
              <param tag="plugin" value="org.rdk.HdmiCec_2" indexOnly="true" />
            </params>
            <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.HdmiCec_2" />
        </testStep>
        <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
            <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.HdmiCec_2" />
            <params>
              <param tag="callsign" value="org.rdk.HdmiCec_2" />
            </params>
        </testStep>
        <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
            <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.HdmiCec_2" />
            <params>
              <param tag="plugin" value="org.rdk.HdmiCec_2" indexOnly="true" />
            </params>
            <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.HdmiCec_2" expectedValues="activated"/>
        </testStep>
      </prerequisite>

      <!-- Activate DisplaySettings plugin -->
      <prerequisite requisiteId="2" requisiteName="Activate_DisplaySettings_Plugin">
        <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
            <params>
              <param tag="plugin" value="org.rdk.DisplaySettings" indexOnly="true" />
            </params>
            <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.DisplaySettings" />
        </testStep>
        <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
            <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.DisplaySettings" />
            <params>
              <param tag="callsign" value="org.rdk.DisplaySettings" />
            </params>
        </testStep>
        <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
            <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.DisplaySettings" />
            <params>
              <param tag="plugin" value="org.rdk.DisplaySettings" indexOnly="true" />
            </params>
            <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.DisplaySettings" expectedValues="activated"/>
        </testStep>
      </prerequisite>

      <!-- check if TV connect. Test case need to be executed only when TV is connected. -->
      <prerequisite requisiteId="3" requisiteName="Get_Display_Connected_Status">
          <testStep testStepId="1" name="Check_Display_Connected_Status" method="Get_Connected_VideoDisplays" pluginName="DisplaySettings">
              <resultGeneration useMethodTag="display_connected_status" />
          </testStep>
      </prerequisite>

      <!-- Enable HDMI CEC_2. Test case need to be executed only when HDMICEC_2 is enabled. -->
      <prerequisite requisiteId="4" requisiteName="Enable HDMICEC">
            <testStep testStepId="1" name="Set_Enabled" method="HdmiCec2_Set_Enabled" >
                <params>
                  <param tag="enabled" value="true" />
                </params>
                <resultGeneration useMethodTag="hdmicec2_check_result" />
            </testStep>
            <testStep testStepId="2" name="Get_Enabled" method="HdmiCec2_Get_Enabled" >
                <resultGeneration useMethodTag="hdmicec2_get_enabled_status" expectedValues="True" />
            </testStep>
      </prerequisite>

      <!-- Event Redisteration -->
      <prerequisite requisiteId="5" requisiteName="Register_And_Listen_Events" type="eventRegister" trace="false">
	    <event pluginName="Controller" eventName="Event_Controller_State_Changed"/>
      </prerequisite>
    </pluginPreRequisite>
    
    <!-- Test case 01 -->
    <testCase testCaseId="HdmiCec2_01" testCaseName="HdmiCec2_Check_Active_Source_Status" desc="Checks the active source status of the device">
            <testCaseInfo testCaseType="direct"/>
            <testStep testStepId="1" name="Get_Active_Source_Status" method="HdmiCec2_Get_Active_Source_Status">
                <resultGeneration status="true" useMethodTag="hdmicec2_validate_boolean_result" />
            </testStep>
    </testCase>
   
   <!-- Test case 02 -->
    <testCase testCaseId="HdmiCec2_02" testCaseName="HdmiCec2_Enable_Disable_HDMICEC" desc="Enables and disables HDMICEC">
        <testCaseInfo testCaseType="setandget" revert="true" />
        <testStep testStepId="1" name="Get_Enabled" method="HdmiCec2_Get_Enabled" saveResult="true" revertGet="yes">
          <resultGeneration useMethodTag="hdmicec2_get_enabled_status" >
            <expectedValues useDefault="true" />
          </resultGeneration>
        </testStep>
        <testStep testStepId="2" name="Set_Enabled" method="HdmiCec2_Set_Enabled" revertSet="yes">
          <params>
            <param tag="enabled" usePreviousResult="true" Id="1" useMethodTag="hdmicec2_toggle_enabled_status" revertParam="yes" />
          </params>
          <resultGeneration useMethodTag="hdmicec2_check_result" />
        </testStep>
        <testStep testStepId="3" name="Get_Enabled" method="HdmiCec2_Get_Enabled" revertFlag="yes">
          <resultGeneration useMethodTag="hdmicec2_get_enabled_status" >
            <expectedValue usePreviousResult="true" Id="1" useMethodTag="hdmicec2_toggle_enabled_status" />
          </resultGeneration>
        </testStep>
    </testCase>

    <!-- Test case 03 -->
    <testCase testCaseId="HdmiCec2_03" testCaseName="HdmiCec2_Get_OSD_Name" desc="Checks the OSD name used by host device">
        <testCaseInfo testCaseType="direct"/>
        <testStep testStepId="1" name="Get_OSD_Name" method="HdmiCec2_Get_OSD_Name">
          <resultGeneration useMethodTag="hdmicec2_get_osd_name" >
          </resultGeneration>
        </testStep>
    </testCase> 

    <!-- Test case 04 -->
    <testCase testCaseId="HdmiCec2_04" testCaseName="HdmiCec2_Get_Vendor_ID" desc="Checks the current vendor ID used by host device">
        <testCaseInfo testCaseType="direct"/>
        <testStep testStepId="1" name="Get_Vendor_ID" method="HdmiCec2_Get_Vendor_ID">
          <resultGeneration useMethodTag="hdmicec2_get_vendor_id">
          </resultGeneration>
        </testStep>
    </testCase> 
    
     <!-- Test case 05 -->
     <testCase testCaseId="HdmiCec2_05" testCaseName="Enable_Disable_HdmiCec_OTP_Option" desc="Enables and Disables the HdmiCec OTP option" >
        <testCaseInfo testCaseType="setandget" revert="true" />
        <testStep testStepId="1" name="Get_OTP_Enabled" method="HdmiCec2_Get_OTP_Enabled" saveResult="true" revertGet="yes">
          <resultGeneration useMethodTag="hdmicec2_get_enabled_status" >
            <expectedValues useDefault="true" />
          </resultGeneration>
        </testStep>
        <testStep testStepId="2" name="Set_OTP_Enabled" method="HdmiCec2_Set_OTP_Enabled" revertSet="yes">
          <params>
            <param tag="enabled" usePreviousResult="true" Id="1" useMethodTag="hdmicec2_toggle_enabled_status" revertParam="yes" />
          </params>
          <resultGeneration useMethodTag="hdmicec2_check_result" />
        </testStep>
        <testStep testStepId="3" name="Get_OTP_Enabled" method="HdmiCec2_Get_OTP_Enabled" revertFlag="yes">
          <resultGeneration useMethodTag="hdmicec2_get_enabled_status" >
            <expectedValue usePreviousResult="true" Id="1" useMethodTag="hdmicec2_toggle_enabled_status" />
          </resultGeneration>
        </testStep>
    </testCase>

    <!-- Test case 06 -->
    <testCase testCaseId="HdmiCec2_06" testCaseName="HdmiCec_2_ActivateDeactivate_Event_Test" desc="Validates statechange event on Activating/deactivating the plugin">
            <testCaseInfo testCaseType="direct" />
            <testCasePreRequisite>
                 <prerequisite requisiteId="1" requisiteName="Activate_Plugins">
                   <testStep testStepId="1" name="Check_PluginActive_Status" method="Get_Plugin_Status" saveResult="true" pluginName="Controller">
                     <params>
                       <param tag="plugin" value="org.rdk.HdmiCec_2" indexOnly="true" />
                     </params>
                     <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.HdmiCec_2" />
                   </testStep>
                   <testStep testStepId="2" name="Activate_Plugin" method="Activate_Plugin"  pluginName="Controller" >
                     <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.HdmiCec_2" />
                     <params>
                       <param tag="callsign" value="org.rdk.HdmiCec_2" />
                     </params>
                   </testStep>
                   <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                     <conditionalExecution enable="true" Id="1" useMethodTag="controller_get_plugin_state" arguments="isDeactivated,org.rdk.HdmiCec_2" />
                     <params>
                       <param tag="plugin" value="org.rdk.HdmiCec_2" indexOnly="true" />
                     </params>
                     <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.HdmiCec_2" expectedValues="activated"/>
                   </testStep>
                </prerequisite>
            </testCasePreRequisite>
            <testStep testStepId="1" name="Deactivate_HdmiCec_2_Plugin" method="Deactivate_Plugin"  pluginName="Controller">
                  <params>
                    <param tag="callsign"  value="org.rdk.HdmiCec_2" />
                  </params>
            </testStep>
            <testStep testStepId="2" name="Check_State_Change_Event" event="Event_Controller_State_Changed" action="eventListener" delay="2" pluginName="Controller">
              <resultGeneration useMethodTag="controller_check_state_change_event" expectedValues="org.rdk.hdmicec_2,deactivated,requested"/>
            </testStep>
            <testStep testStepId="3" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller"  >
                 <params>
                     <param tag="plugin" value="org.rdk.HdmiCec_2" indexOnly="true" />
                 </params>
                 <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.HdmiCec_2" expectedValues="deactivated"/>
            </testStep>
            <testStep testStepId="4" name="Activate_HdmiCec_2_Plugin" method="Activate_Plugin"  pluginName="Controller" delay="1">
                  <params>
                    <param tag="callsign" value="org.rdk.HdmiCec_2" />
                  </params>
            </testStep>
            <testStep testStepId="5" name="Check_State_Change_Event" event="Event_Controller_State_Changed" action="eventListener" delay="2" pluginName="Controller">
              <resultGeneration useMethodTag="controller_check_state_change_event" expectedValues="org.rdk.hdmicec_2,activated,requested"/>
            </testStep>
            <testStep testStepId="6" name="Check_PluginActive_Status" method="Get_Plugin_Status" pluginName="Controller" PluginOnStep="yes" >
                 <params>
                     <param tag="plugin" value="org.rdk.HdmiCec_2" indexOnly="true" />
                 </params>
                 <resultGeneration useMethodTag="controller_get_plugin_state" arguments="check_status,org.rdk.HdmiCec_2" expectedValues="activated"/>
            </testStep>
    </testCase>
</testPlugin>
